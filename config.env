# /home/leon/aag-env/config.env

# 串口设备
AAG_SERIAL_PORT=/dev/ttyUSB0

AAG_VERBOSE_LOGGING=True
AAG_SOLO_DATA_FILE_PATH='/home/aag_weather/aag_solo.dat'

#串口读取后的延时
AAG_SERIAL_PORT_OPEN_DELAY_SECONDS=1

#如果没有加热器就不要处理PWM了
AAG_HAVE_HEATER=True

# 海拔,单位米
AAG_LOCATION__ELEVATION=50
AAG_LOCATION__LATITUDE=49.054
AAG_LOCATION__LONGITUDE=-122.82
AAG_LOCATION__TIMEZONE='America/Vancouver'

#天空温度计算参数
AAG_SKYTEMP__K1=35.0
AAG_SKYTEMP__K2=0.0
AAG_SKYTEMP__K3=0.0
AAG_SKYTEMP__K4=0.0
AAG_SKYTEMP__K5=0.0
AAG_SKYTEMP__K6=40.0
AAG_SKYTEMP__K7=70.0


# 采集间隔（秒）
AAG_CAPTURE_DELAY=30

# 平均读数次数
AAG_NUM_READINGS=5

#SQReference
AAG_SQ_REFERENCE=19.6

# 安全延迟（分钟）
AAG_SAFETY_DELAY=10

#天空温度与环境温度之间的摄氏度差。
AAG_THRESHOLDS__CLOUDY=-17	
#天空温度与环境温度之间的摄氏度差。
AAG_THRESHOLDS__VERY_CLOUDY=-8
#风速（公里/小时）。
AAG_THRESHOLDS__WINDY=50
#风速（公里/小时）。
AAG_THRESHOLDS__VERY_WINDY=75
#阵风速度（公里/小时）
AAG_THRESHOLDS__GUSTY=100
#=阵风速度（公里/小时）。
AAG_THRESHOLDS__VERY_GUSTY=125
#湿度（单位：欧姆）
AAG_THRESHOLDS__WET=2200
#降雨量（单位：欧姆）
AAG_THRESHOLDS__RAINY=1800


# === 雨感加热算法参数 （对应 Solo 界面 “Rain Sensor Heater”） ===

#（a）雨盘振荡频率判“湿”阈值 (Hz)
AAG_HEATER__RAIN_THRESHOLD_FREQ=30
#（b）湿态 / 下雨时使用的加热功率 (百分比)
AAG_HEATER__PWM_MAX=70
#（c）中温保温功率 (湿态加热之外，温度 < LOW_TEMP 时)
AAG_HEATER__PWM_MID=40
#（d）低温轻度保温功率（LOW_TEMP 附近，可选）
AAG_HEATER__PWM_LOW=15
#（e）PWM 变化缓冲 (单位: %)
AAG_HEATER__HYSTERESIS=5
#（f）最低保温温度 (°C)
AAG_HEATER__LOW_TEMP=0
#（g）低温温差 (°C) —— 避免 0 °C 左右频繁开关
AAG_HEATER__LOW_DELTA=4
#（h）最高关闭温度 (°C)
AAG_HEATER__HIGH_TEMP=20
#（i）高温温差 (°C) —— 避免 20 °C 左右频繁开关
AAG_HEATER__HIGH_DELTA=4

# === 冲击加热部分 （对应 Solo 界面 “Impulse Heater”） ===
# 当环境温度低于此值 → 触发“冲击加热” (°C)
AAG_HEATER__IMPULSE_TEMP=10
# 冲击加热持续时间 (秒) —— 100% 输出
AAG_HEATER__IMPULSE_DURATION=60
# 冲击加热循环周期 (秒) —— 每隔 10 min 才可再触发
AAG_HEATER__IMPULSE_CYCLE=600
AAG_HEATER__MIN_POWER=15